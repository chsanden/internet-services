@model MealPlanner.ViewModels.MealEditViewModel

@{
    ViewData["Title"] = "Edit meal";
    Layout = "_Layout";
}
<h1 class="h3 mb-3">@ViewData["Title"]</h1>
<form asp-action="Edit" method="post" class="container-fluid px-0">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MealId" />
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Summary" class="form-label"></label>
        <input asp-for="Summary" class="form-control" />
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>
    <div class="card p-3 mb-4">
        <p class="fw-semibold mb-2">Select dishes</p>
        @if (Model.AllDishes?.Count > 0)
        {
            var selected = new HashSet<int>(Model.SelectedDishIds ?? new List<int>());
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-2">
                @foreach (var dish in Model.AllDishes)
                {
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="SelectedDishIds"
                                   value="@dish.DishId"
                                   id="dish_@dish.DishId"
                                   @(selected.Contains(dish.DishId) ? "checked" : null) />

                            <label class="form-check-label" for="dish_@dish.DishId">
                                @dish.Name
                            </label>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-secondary fst-italic mb-0">No dishes available yet.</p>
        }
    </div>
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Overview" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}