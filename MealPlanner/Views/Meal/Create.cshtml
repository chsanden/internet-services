@model MealPlanner.ViewModels.MealEditViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1 class="h3 mb-3">Create a meal</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control"/>
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>

    <div class="card p-3 mb-3">
        <p class="fw-semibold mb-2">Select dishes:</p>
        @foreach (var dish in Model.AllDishes)
        {
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       name="SelectedDishIds"
                       value="@dish.DishId"
                       id="dish_@dish.DishId"/>
                <label class="form-check-label"
                       for="dish_@dish.DishId">@dish.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Overview" class="btn btn-outline-secondary">Cancel</a>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}