@model IEnumerable<MealPlanner.Models.Dish>

@{
    ViewData["Title"] = "Your Dishes";
}
<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
    @foreach (var dish in Model)
    {
        <div class="col">
            <div class="card-body border-top border-3 border-primary">
                <h5 class="card-title pt-3">@dish.Name</h5>

                @if (!string.IsNullOrWhiteSpace(dish.Summary))
                {
                    <p class="card-text text-secondary">@dish.Summary</p>
                }
                <br>
                <h6 class="mt-2 mb-1">Description</h6>
                <hr class="my-3">
                @if (!string.IsNullOrWhiteSpace(dish.Description))
                {
                    <p class="card-text">@dish.Description</p>
                }
                else
                {
                    <p class="card-text">No description added</p>
                }
            
                <div class="mb-2">
                    <span class="badge text-bg-info">@($"{dish.EstimatedTimeMinutes} min")</span>
                </div>
                
                @if (dish.DishIngredients != null && dish.DishIngredients.Any())
                {
                    <h6 class="mt-3 mb-1">Ingredients</h6>
                    <ul class="list-group list-group-flush small">
                        @foreach (var di in dish.DishIngredients)
                        {
                            var unitLabel = di.Unit?.Symbol ?? di.Unit?.Name;

                            <li class="list-group-item py-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@di.Ingredient?.IngredientName</strong>

                                        @if (!string.IsNullOrWhiteSpace(di.Notes))
                                        {
                                            <div class="text-muted small">@di.Notes</div>
                                        }
                                    </div>

                                    <span class="badge bg-secondary rounded-pill text-nowrap">
                                        @di.Amount @unitLabel
                                    </span>
                                </div>
                            </li>
                        }


                    </ul>
                }
                else
                {
                    <p class="text-muted small mt-2">No ingredients added yet.</p>
                }
                
                <p class="text-end text-muted">@dish.Owner.NickName</p>
            </div>

            <div class="card-footer bg-transparent border-0">
                <div class="d-grid gap-2">
                    <a class="btn btn-primary"
                       asp-controller="CalendarController"
                       asp-action="Add"
                       asp-route-dishId="@dish.DishId">
                        Add to Calendar
                    </a>
                    <a class="btn btn-outline-secondary"
                       asp-controller="Dish"
                       asp-action="Details"
                       asp-route-id="@dish.DishId">
                        View Details
                    </a>
                    <a class="btn btn-outline-warning"
                       asp-controller="Dish"
                       asp-action="Edit"
                       asp-route-id="@dish.DishId">
                        Edit
                    </a>
                </div>
            </div>
        </div>
    }

</div>

<div class="container text-center">
    <a asp-action="Create" class="btn btn-primary">Create new dish</a>
</div>